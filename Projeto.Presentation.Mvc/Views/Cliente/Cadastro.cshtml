@model Projeto.Presentation.Mvc.Models.ClienteCadastroModel

@{

    Layout = "~/Views/Shared/Layout.cshtml";

}


<h5>Preencha todos os campos para cadastrar um Usuario.</h5>
<br/>


@using (Html.BeginForm())
{


        <div class="row m-2 p-1">
            <div class="col-10">
                <label>Nome Completo:</label>
                @Html.TextBoxFor(model => model.Nome,
                    new
                    {
                        @class = "form-control"
                    }
               )
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="col-2">
                <label>Data de Nascimento:</label>
                @Html.TextBoxFor(model => model.DataNascimento,
                   new
                   {
                       @class = "form-control",
                       @type = "date"
                   }
              )
                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row m-2 p-1">
            <div class="col-4">
                <label>Usuario:</label>
                @Html.TextBoxFor(model => model.Usuario,
                   new
                   {
                       @class = "form-control"
                   }
              )
                @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
            </div>
            <div class="col-8">
                <label>Email:</label>
                @Html.TextBoxFor(model => model.Email,
                   new
                   {
                       @class = "form-control"
                   }
              )
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="row m-2 p-1">
            <div class="col-6">
                <label>Senha:</label>
                @Html.PasswordFor(model => model.Senha,
                   new
                   {
                       @class = "form-control"
                   }
              )
                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            </div>
            <div class="col-6">
                <label>Confirme a senha:</label>
                @Html.PasswordFor(model => model.ConfirmarSenha,
                   new
                   {
                       @class = "form-control"
                   }
              )
                @Html.ValidationMessageFor(model => model.ConfirmarSenha,"", new { @class = "text-danger", })
            </div>
            <div class="col-1 mt-4 ">
                <button type="submit" class="btn btn-success">Cadastrar</button>
            </div>
        </div>



}
